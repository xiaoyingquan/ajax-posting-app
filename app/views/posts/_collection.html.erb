<% if post.collectiond_users.any? %>
  <%= post.collectiond_users.map{ |u| u.display_name }.join(",") %> 收藏
<% end %>

<% if current_user # 登入才可以收藏 %>
  <% if post.find_collection(current_user) %>
    <%= link_to "取消❤️", cancelcollection_post_path(post), :method => :post, :remote => true, :class => "btn btn-primary" %>
  <% else %>
    <%= link_to "❤️", collection_post_path(post), :method => :post, :remote => true, :class => "btn btn-primary" %>
  <% end %>
<% end %>
